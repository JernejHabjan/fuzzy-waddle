{
  "compileOnSave": false,
  "compilerOptions": {
    /* Output & Language Features */
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "moduleResolution": "Bundler",              // Faster & better for modern bundlers (Vite, Webpack, etc.)
    "allowArbitraryExtensions": true,

    /* Interop & Imports */
    "esModuleInterop": true,                    // Ensures smooth default import compatibility
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noResolve": false,

    /* Decorators */
    "experimentalDecorators": true,

    /* Paths & Aliases */
    "baseUrl": ".",
    "paths": {
      "@fuzzy-waddle/api-interfaces": ["libs/api-interfaces/src/index.ts"]
    },

    /* Type Checking & Strictness */
    "strict": true,                             // Enables all strict checks
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,

    /* Build Optimizations */
    "skipLibCheck": true,                       // Faster builds
    "skipDefaultLibCheck": true,
    "isolatedModules": true,                    // Better for modern bundlers
    "importsNotUsedAsValues": "remove",         // Helps tree-shaking

    /* Source Maps & Declarations */
    "sourceMap": true,
    "declaration": false,
    "incremental": true,                        // Enables faster builds via .tsbuildinfo cache
    "tsBuildInfoFile": "./tmp/tsconfig.tsbuildinfo"
  },
  "exclude": ["node_modules", "tmp", "dist"]
}
